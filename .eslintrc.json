{
    "env": {
        "browser": true,
        "webextensions": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "plugins": ["sonarjs"],
    "extends": ["plugin:sonarjs/recommended-legacy","react-app"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ]
    }
}
